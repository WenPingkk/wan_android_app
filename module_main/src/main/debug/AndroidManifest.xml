<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sean.module.main">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.sean.base.library.base.BaseApplication"
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity
            android:name="com.sean.module.main.activity.MainActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.sean.module.main.activity.SearchActivity"
            android:exported="false" />
        <activity
            android:name="com.sean.module.main.activity.WebViewActivity"
            android:exported="false"
            android:launchMode="singleTop" />

        <activity
            android:name="com.sean.module.main.activity.WeChatArticleListActivity"
            android:exported="false" />
        <activity
            android:name="com.sean.module.main.activity.SystemArticleActivity"
            android:exported="false" />
        <activity
            android:name="com.sean.module.main.activity.AboutActivity"
            android:exported="false" />
        <activity
            android:name="com.sean.module.main.activity.FavoriteActivity"
            android:exported="false">

        </activity>
    </application>

</manifest>